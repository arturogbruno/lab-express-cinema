<div class="header">
    <h1>Ironhack Cinema</h1>
    <h3>Click on the movie to check the showtimes</h3>
</div>

<div class="movies-container">
    <ul class='movies-list'>
        {{#each movies}}
        <li>
            <img src="{{image}}" alt="{{title}}">
            <h2>{{title}}</h2>
            <a href="/movie/{{_id}}">See more</a>
        </li>
        {{/each}}
    </ul>
</div>